[user]
  name = Daniel Eden
  email = dan.eden@me.com
[core]
  editor = vim -c start
  excludesfile = ~/.gitignore_global
[alias]
# add
  aa = add .
  ap = add --patch

# commit
  cm = commit -S

# log
  lg = vlog --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit

# push
  p = push

# status
  s = status

[diff]
  compactionHeuristic = true
[pull]
	rebase = true
[init]
	defaultBranch = main
